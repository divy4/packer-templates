{
  "builders": [
    {
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/kickstart/centos8/ks.cfg<enter><wait>"
      ],
      "boot_wait": "{{user `first_boot_wait`}}",
      "cpus": "{{user `cpus`}}",
      "disk_size": "{{user `disk_size_mb`}}",
      "export_opts": [
        "--manifest"
      ],
      "format": "{{user `format`}}",
      "guest_additions_path": "{{user `guest_additions_path`}}",
      "guest_os_type": "RedHat_64",
      "hard_drive_discard": true,
      "hard_drive_interface": "sata",
      "hard_drive_nonrotational": true,
      "http_directory": "../../provisioners/",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "iso_interface": "sata",
      "iso_url": "{{user `iso_url`}}",
      "memory": "{{user `memory`}}",
      "output_directory": "{{user `vm_base_directory`}}/{{user `vm_name`}}",
      "post_shutdown_delay": "{{user `post_shutdown_delay`}}",
      "shutdown_command": "shutdown now",
      "shutdown_timeout": "{{user `shutdown_timeout`}}",
      "ssh_password": "{{user `ssh_password`}}",
      "ssh_timeout": "{{user `ssh_timeout`}}",
      "ssh_username": "{{user `ssh_username`}}",
      "type": "virtualbox-iso",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--accelerate2dvideo",
          "{{user `2d_acceleration`}}",
          "--accelerate3d",
          "{{user `3d_acceleration`}}",
          "--audio",
          "dsound",
          "--audiocontroller",
          "ac97",
          "--audioin",
          "{{user `audio_input`}}",
          "--audioout",
          "{{user `audio_output`}}",
          "--biosbootmenu",
          "{{user `bios_boot_menu`}}",
          "--boot1",
          "disk",
          "--boot2",
          "dvd",
          "--boot3",
          "none",
          "--boot4",
          "none",
          "--clipboard-mode",
          "{{user `clipboard`}}",
          "--draganddrop",
          "{{user `drag_and_drop`}}",
          "--firmware",
          "{{user `firmware`}}",
          "--graphicscontroller",
          "vboxsvga",
          "--macaddress1",
          "{{user `mac_address`}}",
          "--mouse",
          "{{user `mouse`}}",
          "--natpf1",
          "SSH,tcp,,22,,22",
          "--nested-hw-virt",
          "on",
          "--rtcuseutc",
          "on",
          "--usbxhci",
          "on",
          "--vram",
          "{{user `vram`}}"
        ],
        [
          "setextradata",
          "global",
          "GUI/SuppressMessages",
          "all"
        ],
        [
          "setextradata",
          "{{.Name}}",
          "GUI/ShowMiniToolBar",
          "false"
        ]
      ],
      "vm_name": "{{user `vm_name`}}"
    }
  ],
  "provisioners": [
    {
      "environment_vars": [
        "HOSTNAME={{user `vm_name`}}",
        "SWAP={{user `swap`}}",
        "SWAP_SIZE={{user `memory`}}"
      ],
      "script": "../../provisioners/shell/configure_centos.sh",
      "type": "shell"
    },
    {
      "environment_vars": [
        "ftp_proxy={{user `proxy`}}",
        "GUEST_ADDITIONS_PATH={{user `guest_additions_path`}}",
        "http_proxy={{user `proxy`}}",
        "https_proxy={{user `proxy`}}"
      ],
      "script": "../../provisioners/shell/install_virtualbox_guest_additions.sh",
      "type": "shell"
    },
    {
      "destination": "/root",
      "source": "../../provisioners/ansible",
      "type": "file"
    },
    {
      "environment_vars": [
        "ftp_proxy={{user `proxy`}}",
        "http_proxy={{user `proxy`}}",
        "https_proxy={{user `proxy`}}",
        "PLAYBOOK={{user `ansible_playbook`}}",
        "SSH_PASSWORD={{user `ssh_password`}}",
        "SSH_USERNAME={{user `ssh_username`}}"
      ],
      "script": "../../provisioners/shell/install_and_run_ansible.sh",
      "type": "shell"
    }
  ]
}
