{
  "builders": [
    {
      "boot_command": [
        "passwd<enter><wait>",
        "{{user `root_password`}}<enter><wait>",
        "{{user `root_password`}}<enter><wait>",
        "systemctl start sshd<enter><wait>"
      ],
      "boot_wait": "40s",
      "cpus": "{{user `cpus`}}",
      "disk_size": "{{user `disk_size`}}",
      "export_opts": [
        "--manifest"
      ],
      "format": "{{user `format`}}",
      "guest_os_type": "ArchLinux_64",
      "hard_drive_discard": true,
      "hard_drive_interface": "sata",
      "hard_drive_nonrotational": true,
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "iso_interface": "sata",
      "iso_url": "{{user `iso_url`}}",
      "memory": "{{user `memory`}}",
      "output_directory": "{{user `vm_base_directory`}}/{{user `vm_name`}}",
      "post_shutdown_delay": "10s",
      "shutdown_command": "shutdown now",
      "shutdown_timeout": "60s",
      "ssh_password": "{{user `root_password`}}",
      "ssh_username": "root",
      "type": "virtualbox-iso",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--audio",
          "dsound",
          "--audiocontroller",
          "ac97",
          "--audioin",
          "off",
          "--audioout",
          "on",
          "--biosbootmenu",
          "{{user `biosbootmenu`}}",
          "--boot1",
          "disk",
          "--boot2",
          "none",
          "--boot3",
          "none",
          "--boot4",
          "none",
          "--clipboard-mode",
          "{{user `clipboard`}}",
          "--draganddrop",
          "{{user `draganddrop`}}",
          "--firmware",
          "{{user `firmware`}}",
          "--mouse",
          "{{user `mouse`}}",
          "--natpf1",
          "SSH,tcp,,22,,22",
          "--rtcuseutc",
          "on",
          "--usbxhci",
          "on",
          "--vram",
          "{{user `vram`}}"
        ],
        [
          "setextradata",
          "global",
          "GUI/SuppressMessages",
          "all"
        ],
        [
          "setextradata",
          "{{.Name}}",
          "GUI/ShowMiniToolBar",
          "false"
        ]
      ],
      "vm_name": "{{user `vm_name`}}"
    }
  ],
  "provisioners": [
    {
      "environment_vars": [
        "MEMORY={{user `memory`}}",
        "NETWORK_INTERFACE=enp0s3",
        "ROOT_PASSWORD={{user `root_password`}}",
        "VM_NAME={{user `vm_name`}}",
        "ZONE_CITY={{user `zone_city`}}",
        "ZONE_REGION={{user `zone_region`}}"
      ],
      "pause_after": "5s",
      "script": "../../common/provisioners/shell/arch_bootstrap_os.sh",
      "type": "shell"
    },
    {
      "command": "vboxmanage storageattach \"{{user `vm_name`}}\" --storagectl \"SATA Controller\" --port 1 --medium emptydrive",
      "type": "shell-local"
    },
    {
      "command": "vboxmanage startvm \"{{user `vm_name`}}\"",
      "type": "shell-local"
    },
    {
      "script": "../../common/provisioners/shell/arch_add_vbox_guest_additions.sh",
      "type": "shell"
    },
    {
      "environment_vars": [
        "IS_SUDO_USER=true",
        "PASSWORD={{user `non_root_password`}}",
        "USERNAME={{user `non_root_username`}}"
      ],
      "script": "../../common/provisioners/shell/arch_add_user.sh",
      "type": "shell"
    },
    {
      "script": "../../common/provisioners/shell/arch_add_x.sh",
      "type": "shell"
    },
    {
      "environment_vars": [
        "NON_ROOT_USERNAME={{user `non_root_username`}}"
      ],
      "script": "../../common/provisioners/shell/arch_add_fluxbox.sh",
      "type": "shell"
    },
    {
      "environment_vars": [
        "NON_ROOT_USERNAME={{user `non_root_username`}}",
        "X_SUPPORT={{user `x_support`}}"
      ],
      "script": "../../common/provisioners/shell/arch_add_tools.sh",
      "type": "shell"
    }
  ],
  "sensitive-variables": [
    "root_password"
  ]
}