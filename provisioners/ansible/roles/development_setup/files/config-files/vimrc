" arch linux
"runtime! archlinux.vim


" ######################## shortcuts

" arrowkey fix
"inoremap <Up> <C-o>gk
"nnoremap <Up> gk

"inoremap <Down> <C-o>gj
"nnoremap <Down> gj



" ######################## settings

" colors
filetype plugin on
syntax on

" highlight searches
set hlsearch

" show line number and mark 81st character column
set number
set colorcolumn=100

" mouse
set mouse=a

" jump across line breaks
set whichwrap=b,s,<,>,[,]

" tab/indent settings
set tabstop=2
set shiftwidth=2
set softtabstop=2
set smarttab
set expandtab
set smartindent

" don't search boost files
set include=^\\s*#\\s*include\ \\(<boost/\\)\\@!
set include=^\\s*#\\s*include\ \\(<SDL2/\\)\\@!

" clipboard
set clipboard=unnamedplus

